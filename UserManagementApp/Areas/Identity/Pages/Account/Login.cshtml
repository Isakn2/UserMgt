@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<!-- Hero Section with Background Image -->
<div class="hero-section" style="background-image: url('/images/login-image.jpg'); background-size: cover; background-position: center; min-height: 100vh;">
    <div class="hero-overlay" style="background: rgba(0, 0, 0, 0.5); min-height: 100vh; padding-top: 50px;">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <!-- Display the logout message -->
                    <!-- @if (ViewData["Message"] != null)
                    {
                        <div class="alert alert-info">
                            @ViewData["Message"]
                        </div>
                    } -->
                    <!-- Display the logout message -->
                    @if (!string.IsNullOrEmpty(ViewData["Message"] as string))
                    {
                        <div class="alert alert-success">@ViewData["Message"]</div>
                    }

                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h3 class="card-title mb-0">Log in</h3>
                        </div>
                        <div class="card-body">
                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-check mb-3">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                                </div>
                                <div class="mb-3">
                                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                                </div>
                                <div class="text-center">
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                    </p>
                                    <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}